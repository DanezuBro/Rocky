@using Rocky_Utility
@model Rocky_Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
    <!--Card-->

    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        @*      <div class="card-header">
            Featured
            </div>*@

        <div class="card-body px-3 pt-2 pb-1 row">
            <div class="col-7"><label class="float-start">@Model.Name</label></div>
            <div class="col-5"><label class="float-end"><span class="text-primary h5">@string.Format("{0:c0}",Model.Price)</span> / sqft</label></div>
            @*    <h5 class="card-title">Card title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
        </div>

        <img src="@WC.ImagePath@Model.Image" class="card-img-top img-fluid d-block mx-auto mb-3" alt="Product image">

        @*  <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
            </ul>*@
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100 text-black" style="background-color:lavenderblush">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100 text-black" style="background-color:aliceblue">@Model.ApplicationType.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p>@Model.ShortDesc</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>

</div>

