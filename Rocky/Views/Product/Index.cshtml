@model IEnumerable<Rocky.Models.Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create New Product</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Product Name</th>
                    <th scope="col" class="text-center">Price</th>
                    <th scope="col" class="text-center">Category Name</th>
                    <th scope="col" class="text-center">Application Type Name</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td width="30%" class="text-center">@product.Name</td>
                        <td width="10%" class="text-center">@product.Price</td>
                        <td width="20%" class="text-center">@product.Category.Name</td>
                        <td width="20%" class="text-center">@product.ApplicationType.Name</td>
                        <td class="align-items-center">
                            <div class="text-center" role="group">
                                <a asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No product exists.</p>
    }

</div>