@model Rocky_Models.Category

<form method="post" asp-action="DeletePost" class="mt-4">
        <div class="row col-5 mx-auto">
        <input asp-for="Id" hidden />
            <div class="col-12 mb-4">
                <h2>Delete Category</h2>
            </div>
            <div class="col-12">


                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" class="form-control" readonly>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-circle-left"></i> Back to list</a>
                </div>
            </div>
        </div>
</form>



