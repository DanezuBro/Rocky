@model Rocky_Models.Category

<form method="post" asp-action="Create" class="mt-4">
        <div class="row col-5 mx-auto">
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
            <div class="col-12 mb-4">
                <h2>Add category</h2>
            </div>
            <div class="col-12">


                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DisplayOrder" class="form-label"></label>
                    <input asp-for="DisplayOrder" class="form-control">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-success"><i class="fa-solid fa-circle-left"></i> Back to list</a>
                </div>
            </div>
        </div>
</form>

@section Scripts{
    @{<partial name="_ValidationScriptsPartial"/>}
}

