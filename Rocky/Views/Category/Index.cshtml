@model IEnumerable<Rocky_Models.Category>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create New Category</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th scope="col" class="text-center">Category Name</th>
                    <th scope="col" class="text-center">Display Order</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td width="50%" class="text-center">@category.Name</td>
                        <td width="30%" class="text-center">@category.DisplayOrder</td>
                        <td class="align-items-center">
                            <div  class="text-center" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i></a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="fa-solid fa-trash-can"></i></a>
                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <p>No category exists.</p>
    }

</div>