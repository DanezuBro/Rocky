@using Rocky_Utility
@model Rocky_Models.ViewModels.DetailsVM


<div class="container">
    <div class="row">

        <form method="post">
            <input asp-for="@Model.Product.Id" hidden/>
            <div class="container pt-4" style="background-color:white;">
                <!--Card-->

                <div class="card" style="border:1px solid #222">
                    <div class="card-header bg-dark text-light m-lg-0 row container" style="border-radius:0px;">
                        <div class="col-12 col-md-6">
                            <h1 class="text-white text-start">@Model.Product.Name</h1>
                        </div>
                        <div class="col-12 col-md-6">
                            <h1 class="text-warning text-end">Price: @(Model.Product.Price.ToString("c"))</h1>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="container rounded p-2">
                            <div class="row">
                                <div class="col-12 col-lg-4 p-1 text-center">
                                    <img src="@WC.ImagePath@Model.Product.Image" style="width:100%;" class="rounded" />
                                </div>
                                <div class="col-12 col-lg-8">
                                    <div class="row pl-3">
                                        <div class="col-12">
                                            <span class="badge p-3 border text-dark" style="background-color:lavenderblush">@Model.Product.Category.Name</span>
                                            <span class="badge p-3 border text-dark" style="background-color:azure">@Model.Product.ApplicationType.Name</span>
                                            <h3 class="text-success"></h3>
                                            <p class="text-secondary">@Html.Raw(@Model.Product.Description)</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="card-footer bg-dark">
                                    <div class="row">
                                        <div class="col-12 col-md-6 pb-1">
                                            <a asp-action="Index" class="btn btn-success form-control btn-lg" style="height:50px;">Back to list</a>
                                        </div>
                                        @if (Model.ExistsInCart)
                                        {
                                            <div class="col-12 col-md-6">
                                                <a asp-action="RemoveFromCart" asp-route-id="@Model.Product.Id" class="btn btn-warning form-control btn-lg" style="height:50px;">Remove from Cart</a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-12 col-md-6">
                                                <button type="submit" asp-route-id="@Model.Product.Id" class="btn btn-info form-control btn-lg" style="height:50px;">Add to Cart</button>
                                        </div>                                          
                                        }

                                    </div>


                                </div>


                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </form>

    </div>
</div>